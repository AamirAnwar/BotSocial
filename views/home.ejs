<%include partials/header.ejs%>

<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
	<div class="col-md-6 px-0">
		<h1 class="display-4 font-italic">Welcome to BotSocial</h1>
		<p class="lead my-3">Just another social platform</p>
	</div>
</div>
<form action="/story" method="POST">
	<div class="input-group">
		<div class="input-group-prepend">
			<!-- <span class="input-group-text">What's on your mind?</span> -->
		</div>
		<textarea class="form-control" name="text" placeholder="What's on your mind?"></textarea>
	</div>
	<br>
	<button type="button submit" class="btn btn-success">Post</button>
</form>
<br>
<br>
<h2>Top Stories</h2>
<br>
<%for(var i =0;i<stories.length;i++) {%>
<div class="row mb-1">
	<div class="col-md-12">
		<div class="card flex-md-row mb-4 box-shadow h-md-250">
			<div class="card-body d-flex flex-column align-items-start">
				<h3 class="mb-0">
					<a class="text-dark" href="#">Post #<%=i+1%></a>
				</h3>
				<div class="mb-1 text-muted"><%=stories[i].date%></div>
				<p class="card-text mb-auto">
					<%=stories[i].text%>
				</p>
				<%if (stories[i].author.username != undefined) { %>
				<!-- <br> -->
				<a href="/profile/<%=stories[i].author.id%>"<p class="text-muted">posted by: <%=stories[i].author.username%></p></a>
				<%}%>
			</div>
		</div>
	</div>

</div>
<%}%>
</div>



<%include partials/footer.ejs%>

